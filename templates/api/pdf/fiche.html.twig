{% extends 'base.html.twig' %}

{% block title %}Chroniques oubliées{% endblock %}

{% block body %}
	<h1>Chroniques oubliées</h1>

	<div class="section">
		<img src="{{pdfContent.picture}}" class="portrait"></img>
		<div class="column">
					<div class="name">Nom du personnage</div>

			<div class="name">{{pdfContent.characterName}}</div>
			<table>
				<tr>
					<th>Niveau</th>
					<td>{{pdfContent.level}}</td>
				</tr>
				<tr>
					<th>Classe</th>
					<td>{{pdfContent.classe.name}}</td>
				</tr>
				<tr>
					<th>Race</th>
					<td>{{pdfContent.raceName}}</td>
				</tr>
			</table>
		</div>
		<div class="clear"></div>
	</div>

	<div class="section">
		<div class="column">
			<div class="section-title">Caractéristiques</div>
			<table>
				<tr>
					<th>Force</th>
					<td class="attribute">{{pdfContent.stats.Force}}</td>
				</tr>
				<tr>
					<th>Dextérité</th>
					<td class="attribute">{{pdfContent.stats.Dextérité}}</td>
				</tr>
				<tr>
					<th>Constitution</th>
					<td class="attribute">{{pdfContent.stats.Constitution}}</td>
				</tr>
				<tr>
					<th>Intelligence</th>
					<td class="attribute">{{pdfContent.stats.Intelligence}}</td>
				</tr>
				<tr>
					<th>Sagesse</th>
					<td class="attribute">{{pdfContent.stats.Sagesse}}</td>
				</tr>
				<tr>
					<th>Charisme</th>
					<td class="attribute">{{pdfContent.stats.Charisme}}</td>
				</tr>
			</table>
		</div>
		<div class="column">
			<div class="section-title">Capacités</div>
			<table>
				<tr>
					<th>{{pdfContent.wayAbilities[0].name}}</th>
					
				{% endblock %}

